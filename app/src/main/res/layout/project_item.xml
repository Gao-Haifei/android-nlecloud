<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="@drawable/view"
        android:gravity="center"
        android:id="@+id/project_project"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/project_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="项目名称"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/project_type"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:text="行业类别"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:background="@drawable/wiiii"
                android:id="@+id/project_lianjie"
                android:layout_height="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                android:layout_width="20dp" />

            <ImageButton
                android:background="@drawable/b"
                android:id="@+id/project_bianji"
                android:layout_alignParentEnd="true"
                android:layout_height="30dp"
                android:layout_marginEnd="50dp"
                android:layout_width="30dp" />

            <ImageButton
                android:background="@drawable/s"
                android:id="@+id/project_shanchu"
                android:layout_alignParentEnd="true"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_width="30dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp">


            <TextView
                android:id="@+id/project_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="项目ID： 636275"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp">


            <TextView
                android:id="@+id/project_apitag"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="项目标识码： "
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp">


            <TextView
                android:id="@+id/project_createtime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="创建时间： 2023-04-16 18:10"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_device"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/sb" />

            <TextView
                android:id="@+id/project_device"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:text="0个设备"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/project_device_sensor"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:text="0个传感器"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/cl" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:text="策略数"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/project_cl"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:text="0个"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/lssj" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:text="传感数据"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/project_history"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:text="0条"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>